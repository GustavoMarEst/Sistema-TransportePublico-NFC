<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recarga"
    android:background="#202733">

    <TextView
        android:id="@+id/textView"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="RECARGA DE CREDITO"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_credito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txt_tarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:textColorHint="#BDBDBD"
        android:hint="Numero de la Tarjeta"
        android:inputType="textPersonName"
        android:textColorHighlight="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_200" />

    <Button
        android:id="@+id/btn_10"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_marginBottom="260dp"
        android:background="@drawable/btn_redondeado2"
        android:text="$10"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirmar"
        app:layout_constraintEnd_toStartOf="@+id/btn_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_credito" />

    <Button
        android:id="@+id/btn_20"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_marginBottom="260dp"
        android:background="@drawable/btn_redondeado2"
        android:text="$20"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_credito" />

    <Button
        android:id="@+id/btn_50"
        android:layout_width="100sp"
        android:layout_height="80dp"
        android:layout_marginBottom="260dp"
        android:background="@drawable/btn_redondeado2"
        android:text="$50"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_20"
        app:layout_constraintTop_toBottomOf="@+id/txt_credito" />

    <Button
        android:id="@+id/btn_200"
        android:layout_width="100sp"
        android:layout_height="80dp"
        android:layout_marginBottom="170dp"
        android:background="@drawable/btn_redondeado2"
        android:text="$200"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_20" />

    <Button
        android:id="@+id/btn_100"
        android:layout_width="100sp"
        android:layout_height="80dp"
        android:layout_marginBottom="170dp"
        android:background="@drawable/btn_redondeado2"
        android:text="$100"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirmar"
        app:layout_constraintEnd_toStartOf="@+id/btn_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_10" />

    <Button
        android:id="@+id/btn_500"
        android:layout_width="100sp"
        android:layout_height="80dp"
        android:layout_marginBottom="170dp"
        android:background="@drawable/btn_redondeado2"
        android:text="$500"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_200"
        app:layout_constraintTop_toBottomOf="@+id/btn_50" />

    <Button
        android:id="@+id/btn_confirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_redondeado"
        android:text="CONFIRMAR"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="$"
        android:textColor="#FFFFFF"
        android:textColorHint="#BDBDBD"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_credito"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txt_expire"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="90dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="MM/AAAA"
        android:inputType="date"
        android:textColorHint="#BDBDBD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tarjeta" />

    <EditText
        android:id="@+id/txt_cvv"
        android:layout_width="128dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="90dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="CVV"
        android:inputType="textPersonName"
        android:textColorHint="#BDBDBD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_expire"
        app:layout_constraintTop_toBottomOf="@+id/txt_tarjeta" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="120dp"
        android:text="AÃ±ade una tarjeta de credito"
        app:layout_constraintBottom_toTopOf="@+id/txt_tarjeta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_100" />

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#202733"
        app:layout_constraintBottom_toTopOf="@+id/btn_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_credito" />

    <TextView
        android:id="@+id/txt_credValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#202733"
        app:layout_constraintBottom_toTopOf="@+id/txt_credito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>